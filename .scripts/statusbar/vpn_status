#!/bin/bash

case $BLOCK_BUTTON in
	1) vpn >/dev/null ;;
	2) expressvpn disconnect >/dev/null  && echo "Disconnecting..." ;;
esac

vpn_status=`expressvpn status`

if [ "$vpn_status" == "Not connected" ]
then
	echo "ðŸ”“" # Return blank for widget
else
	echo -n "ðŸ”’ "; echo "$vpn_status" | grep -oP "to\s+\K\w.*" # Extract everything after "Connected to"..., and print on same line with the lock icon
fi
